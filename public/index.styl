svg {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

#toast {
  position: absolute;
  bottom: 0;
  right: 0;
  display: inline-block;
  max-width: 100%;
  padding: 0.5em;
  color: #fff;
  border-radius: 2px;
  transition: all 500ms;
  
  a {
    color: #fff;
    font-weight: 600;
    text-decoration: none;
  }
}

@media (min-width: 500px) {
  #toast {
    margin: 5px;
    padding: 1em;
  }
}

#toast.success { background: #4CAF50; }
#toast.error { background: #F44336; }
#toast.progress { background: #03A9F4; }

.node {
  cursor: pointer;
}

.edge {
  stroke-width: 1;
  stroke: #000;
  opacity: 0.1;
}